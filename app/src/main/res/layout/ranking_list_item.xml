<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding">

    <TextView
        android:id="@+id/ranking_place_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ranking_team_name_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ranking_team_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toRightOf="@id/ranking_place_textView"
        app:layout_constraintRight_toLeftOf="@id/ranking_points_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="italic"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/ranking_points_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toRightOf="@id/ranking_team_name_textView"
        app:layout_constraintRight_toLeftOf="@id/ranking_wins_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ranking_wins_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toRightOf="@id/ranking_points_textView"
        app:layout_constraintRight_toLeftOf="@id/ranking_draws_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ranking_draws_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toRightOf="@id/ranking_wins_textView"
        app:layout_constraintRight_toLeftOf="@id/ranking_losses_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ranking_losses_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_margin"
        app:layout_constraintLeft_toRightOf="@id/ranking_draws_textView"
        app:layout_constraintRight_toLeftOf="@id/ranking_goal_difference_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ranking_goal_difference_textView"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ranking_losses_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="15sp" />

</android.support.constraint.ConstraintLayout>